def string_matching(pat,text):
    m=len(pat)
    n=len(text)
    for i in range(n-m+1):
        j=0
        while(j<m):
            if(text[i+j]!=pat[j]):
                break
            j=j+1
        if(j==m):
            print("Pattern found at index",i)

text=input("Enter the text: ")
pattern=input("Enter the pattern: ")
string_matching(pattern,text)
