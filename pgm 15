def printAllsubsetsRec(arr,n,v,sum):
    if sum==0:
        for value in v:
            print(value,end="_")
        print()
        return

    if n==0:
        return

    printAllsubsetsRec(arr,n-1,v,sum)
    v1=[]+v
    v1.append(arr[n-1])
    printAllsubsetsRec(arr,n-1,v1,sum-arr[n-1])

def printAllsubsets(arr,n,sum):
    v=[]
    printAllsubsetsRec(arr,n,v,sum)

arr=[3,34,4,12,5,2]
sum=9
n=len(arr)
printAllsubsets(arr,n,sum)

